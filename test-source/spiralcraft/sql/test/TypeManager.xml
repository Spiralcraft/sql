<store:TypeManager
  xmlns:store="class:/spiralcraft/sql/data/store/"
  xmlns:example="class:/spiralcraft/data/test/example/"
  >

  <autoUpgrade>true
  </autoUpgrade>
  
  <schemaMappings>
    <store:SchemaMapping>
      
      <schema 
        ref="example:Example.schema.xml"
      />
    </store:SchemaMapping>
  </schemaMappings>
    
  <dialect>
    <hsql:HsqldbDialect 
      xmlns:hsql="class:/spiralcraft/sql/vendor/hsqldb/"
    />
  </dialect>  
  
  <tableMappings>
    <store:TableMapping>

      <type><example:Customer.type/>
      </type>
          
      <tableName>Customer
      </tableName>
          
      <columnMappings>

        <store:ColumnMapping>
          <fieldName>address
          </fieldName>
              
          <flatten>true
          </flatten>
              
        </store:ColumnMapping>
            
      </columnMappings>
          
    </store:TableMapping>

  </tableMappings>
      
</store:TypeManager>
